syntax enable
set number
set showmode
set ruler
set tabstop=4
set noswapfile
set nobackup
set nowritebackup
set timeoutlen=500
set encoding=UTF-8
set notimeout
set shiftwidth=4
set expandtab
set virtualedit=all
set guicursor=
set nowrap
set scrolloff=5
set updatetime=5000
set splitright
set splitbelow
filetype on
filetype plugin on
filetype indent on
retab!

" hide status line
set noshowmode
set noruler
set laststatus=0
set noshowcmd
set cmdheight=1

